@model IEnumerable<Bookkeeping.Models.TallyRecord>
@{
    Layout = null;
    var i = 1;
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>@Html.DisplayNameFor(m => m.No)</th>
                <th>@Html.DisplayNameFor(m => m.Category)</th>
                <th>@Html.DisplayNameFor(m => m.Date)</th>
                <th>@Html.DisplayNameFor(m => m.Money)</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(i++)</td>
                    <td>@item.Category</td>
                    <td>@item.Date.Value.ToString("yyyy-MM-dd")</td>
                    <td>@item.Money.Value.ToString("N0")</td>
                </tr>
            }
        </table>
        @Html.PagedListPager(Model as IPagedList, page=>Url.Action("Index", new { page }))
    </div>
</div>
